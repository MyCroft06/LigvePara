<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/card_view"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/doviz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/imageView"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:text="1 Dolar : 3.3333 TL"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:background="#FFFF00" />

        <TextView
            android:id="@+id/zaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/doviz"
            android:layout_marginBottom="26dp"
            android:text="Zaman"
            android:textColor="#707070" />

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/zaman"
            android:layout_alignStart="@+id/doviz"
            android:text="TODAY"
            android:textColor="#525252" />

        <TextView
            android:id="@+id/textview22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/today"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@id/today"
            android:text="SAAT"
            android:textColor="#525252" />

        <TextView
            android:id="@+id/saattxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textview22"
            android:layout_below="@+id/textview22"
            android:text="Saat"
            android:textColor="#707070" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@+id/doviz"
            android:background="@drawable/line" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/zaman"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@id/zaman"
            android:background="@drawable/a" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="-18dp"
            android:background="@drawable/cercle" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="-7dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/cercle" />

    </RelativeLayout>

</android.support.v7.widget.CardView>